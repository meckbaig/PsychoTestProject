<Page x:Name="lecPage" x:Class="PsychoTestProject.Lections"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
      xmlns:local="clr-namespace:PsychoTestProject"
      xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Lections" Background="Azure">

    <Grid Background="Azure" SizeChanged="PageSizeChanged">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="140"/>
            <ColumnDefinition Width="6*"/>
        </Grid.ColumnDefinitions>
        <ListBox Background="Azure" ItemsSource="{Binding lectionList}" Margin="0,0,0,25">
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="Padding" Value="0"/>
                    <Setter Property="BorderThickness" Value="0"/>
                </Style>
            </ListBox.ItemContainerStyle>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Button Content="{Binding Path=Name}" CommandParameter="{Binding Path=Url}" Background="#00000000" HorizontalContentAlignment="Left"
                         Command="{Binding ElementName=lecPage, Path=DataContext.OpenLectionCommand}" BorderBrush="{x:Null}" Width="136" HorizontalAlignment="Left"/>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Button Content="Назад" FontFamily="Microsoft YaHei UI" FontSize="14" Background="#FFFF8F6C" BorderBrush="{x:Null}" 
         VerticalAlignment="Bottom" Height="25" Click="Back_Click"/>
        <ScrollViewer x:Name="TopStackPanelScroll" DockPanel.Dock="Top" VerticalScrollBarVisibility="Disabled" HorizontalScrollBarVisibility="Auto" Grid.Column="1" VerticalAlignment="Top">
            <StackPanel x:Name="TopStackPanel" Background="#FF9BA0A0" Orientation="Horizontal">
                <StackPanel Background="#FFD6E8E8" Orientation="Horizontal" Margin="0,0,1,0">
                    <TextBlock FontFamily="Microsoft YaHei UI" FontSize="14" Text="Тип вопроса" 
                         VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5,0,0,0"/>
                    <ComboBox x:Name="NewQuestionType" Width="120" Margin="5,5,5,5" BorderBrush="#FFF8F8F8" SelectedIndex="0">
                        <TextBlock x:Name="String">Открытый</TextBlock>
                        <TextBlock x:Name="Single">Один вар.</TextBlock>
                        <TextBlock x:Name="Multiple">Несколько вар.</TextBlock>
                    </ComboBox>
                    <Button Content="" FontFamily="Microsoft YaHei UI" FontSize="14" BorderBrush="{x:Null}" 
                        Width="23" Height="23" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="0,0,5,0" Click="Button_Click_1">
                        <Button.Background>
                            <ImageBrush Stretch="UniformToFill" ImageSource="/Resources/add_white.png"/>
                        </Button.Background>
                    </Button>
                </StackPanel>
                <StackPanel Background="#FFD6E8E8" Orientation="Horizontal" Margin="1,0,1,0">
                    <TextBlock FontFamily="Microsoft YaHei UI" FontSize="14" Text="Номер вопроса" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5,0,0,0"/>
                    <ComboBox x:Name="QuestionsComboBox" Width="50" Margin="5,5,5,5" BorderBrush="#FFF8F8F8" SelectedIndex="1"
                            ItemsSource="{Binding QuestionList, Mode=TwoWay}" SelectedItem="{Binding Question}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Path=Id}" TextWrapping="Wrap"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </StackPanel>
                <StackPanel Background="#FFD6E8E8" Orientation="Horizontal" Margin="1,0,1,0">
                    <Button Content="Получить выделенный текст" FontFamily="Microsoft YaHei UI" FontSize="14" Background="#FFF8F8F8" 
                        BorderBrush="{x:Null}" Height="25" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" 
                        Margin="5,0,5,0" Width="124" Click="Button_Click"/>
                </StackPanel>
                <StackPanel Background="#FFD6E8E8" Orientation="Horizontal" Margin="1,0,1,0">
                    <TextBlock FontFamily="Microsoft YaHei UI" FontSize="10" Text="Количество отобр. вопросов" VerticalAlignment="Center" Margin="5,0,0,0" Width="86" Height="26" TextWrapping="Wrap"/>
                    <xctk:IntegerUpDown Name="TakeUpDown" Minimum="0" Maximum="{Binding QuestionList.Count}" Width="60" Height="23" Margin="5,0,5,0"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
        <wv2:WebView2 x:Name="Web" Grid.Column="1" Margin="0,49,0,0"/>
        
    </Grid>
</Page>
