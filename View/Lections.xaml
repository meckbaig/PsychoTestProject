<Page x:Name="lecPage" x:Class="PsychoTestProject.Lections"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
      xmlns:local="clr-namespace:PsychoTestProject"
      xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Лекции" Background="Azure">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/EditorResourceDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <Style TargetType="Button">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border CornerRadius="8"
                                Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </Page.Resources>

    <Grid Background="Azure" SizeChanged="PageSizeChanged">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="140"/>
            <ColumnDefinition Width="6*"/>
        </Grid.ColumnDefinitions>
        <ListBox Background="Azure" ItemsSource="{Binding LectionList}" Margin="0,0,0,35" BorderThickness="0">
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="Padding" Value="0"/>
                    <Setter Property="BorderThickness" Value="0"/>
                </Style>
            </ListBox.ItemContainerStyle>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Button CommandParameter="{Binding Path=Url}" Background="#00000000"
                             HorizontalContentAlignment="Left" Command="{Binding ElementName=lecPage, Path=DataContext.OpenLectionCommand}" 
                             BorderBrush="{x:Null}" Width="136" HorizontalAlignment="Left" MinHeight="24">
                            <TextBlock Text="{Binding Path=Name}" FontSize="14" Margin="3"/>
                        </Button>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Button Content="Назад" FontFamily="Microsoft YaHei UI" FontSize="14" Background="#FFFF8F6C" BorderBrush="{x:Null}" 
         VerticalAlignment="Bottom" Height="35" Click="Back_Click"/>
        <ScrollViewer x:Name="TopStackPanelScroll" DockPanel.Dock="Top" VerticalScrollBarVisibility="Disabled" HorizontalScrollBarVisibility="Auto" Grid.Column="1" VerticalAlignment="Top">
            <StackPanel x:Name="TopStackPanel" Background="#FFD6E8E8" Orientation="Horizontal">
                <StackPanel Background="#FFD6E8E8" Orientation="Horizontal" Margin="0,0,1,0">
                    <Button Content="" FontFamily="Microsoft YaHei UI" FontSize="14" BorderBrush="{x:Null}" Background="#FF6CFFB6"
                        Width="28" Height="28" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" ToolTip="Сохранить"
                        Margin="5,2,2,2" Click="SaveButton_Click" Template="{DynamicResource SaveButtonTemplate}"/>

                    <Button Name="DeleteLectionBT" BorderBrush="{x:Null}" HorizontalAlignment="Left" VerticalAlignment="Center" Width="26"
                        Height="28" VerticalContentAlignment="Center" Margin="2,0,5,0" Click="DeleteLectionBT_Click" ToolTip="Удалить"
                        Template="{DynamicResource DeleteButtonTemplate}" Background="#FFFF8F6C"/>

                </StackPanel>
                <StackPanel Background="#FFD6E8E8" Orientation="Horizontal" Margin="0,0,1,0">
                    <TextBlock FontFamily="Microsoft YaHei UI" FontSize="14" Text="Название " Margin="5,0,0,0" TextWrapping="Wrap" Width="72" Height="16" VerticalAlignment="Center"/>
                    <TextBox x:Name="LectionTitleTB" TextWrapping="Wrap" VerticalAlignment="Center" MinWidth="50" FontSize="14" Margin="0,0,5,0" Text="{Binding LectionTitle}" MaxWidth="300" KeyUp="LectionTitleTB_KeyUp"/>

                    <Button Name="BoldBT" HorizontalAlignment="Left" VerticalAlignment="Center" Width="26" Height="28" VerticalContentAlignment="Center" 
                     Margin="2,0,5,0" Content="B" Background="White" FontSize="14" Click="BoldBT_Click" FontWeight="Bold" ToolTip="Полужирный"/>
                    <Button Name="ItalicBT" HorizontalAlignment="Left" VerticalAlignment="Center" Width="26" Height="28" VerticalContentAlignment="Center" 
                     Margin="2,0,5,0" Content="I" Background="White" FontSize="14" Click="ItalicBT_Click" FontStyle="Italic" ToolTip="Курсив"/>
                    <Button Name="UnderlineBT" HorizontalAlignment="Left" VerticalAlignment="Center" Width="26" Height="28" VerticalContentAlignment="Center" 
                     Margin="2,0,5,0" Background="White" Click="UnderlineBT_Click" ToolTip="Подчёркивание">
                        <TextBlock TextDecorations="Underline" FontSize="14" Text="U"/>
                    </Button>
                    <Button Name="StrikethroughBT" HorizontalAlignment="Left" VerticalAlignment="Center" Width="26" Height="28" VerticalContentAlignment="Center" 
                     Margin="2,0,5,0" Background="White" Click="StrikethroughBT_Click" ToolTip="Зачёркивание">
                        <TextBlock TextDecorations="Strikethrough" FontSize="14" Text="U"/>
                    </Button>
                    <Button Name="LeftBT" HorizontalAlignment="Left" VerticalAlignment="Center" Width="26" Height="28" VerticalContentAlignment="Center" ToolTip="По левому краю"
                     Margin="2,0,5,0" Background="White" FontSize="14" FontWeight="Bold" Click="LeftBT_Click" Template="{DynamicResource LeftButtonTemplate}"/>
                    <Button Name="CenterBT" HorizontalAlignment="Left" VerticalAlignment="Center" Width="26" Height="28" VerticalContentAlignment="Center"  ToolTip="По центру"
                     Margin="2,0,5,0" Background="White" FontSize="14" FontWeight="Bold" Click="CenterBT_Click" Template="{DynamicResource CenterButtonTemplate}"/>
                    <Button Name="RightBT" HorizontalAlignment="Left" VerticalAlignment="Center" Width="26" Height="28" VerticalContentAlignment="Center"  ToolTip="По правому краю"
                     Margin="2,0,5,0" Background="White" FontSize="14" FontWeight="Bold" Click="RightBT_Click" Template="{DynamicResource RightButtonTemplate}"/>
                    <Button Name="JustifyBT" HorizontalAlignment="Left" VerticalAlignment="Center" Width="26" Height="28" VerticalContentAlignment="Center"  ToolTip="По ширине"
                     Margin="2,0,5,0" Background="White" FontSize="14" FontWeight="Bold" Click="JustifyBT_Click" Template="{DynamicResource JustifyButtonTemplate}"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
        <wv2:WebView2 x:Name="Web" Grid.Column="1" Margin="0,32,0,0"/>
    </Grid>
</Page>
