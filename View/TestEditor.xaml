<Page x:Name="testEditorPage" x:Class="PsychoTestProject.View.TestEditor"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PsychoTestProject.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
        MinWidth="700" MinHeight="450"
      Title="TestEditor">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/EditorResourceDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <Style TargetType="Button">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border CornerRadius="8"
                                Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </Page.Resources>

    <Grid Background="Azure">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="140"/>
            <ColumnDefinition Width="6*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Horizontal">
            <Button HorizontalAlignment="Left" VerticalAlignment="Center" Width="26" Height="28" 
                CommandParameter="{Binding ElementName=testEditorPage, Path=DataContext.Test}" 
                Command="{Binding ElementName=testEditorPage, Path=DataContext.OpenTestCommand}" Margin="1,0,1,0"
                Template="{DynamicResource EditButtonTemplate}" Background="#FF6CFFB6"/>
            
            <Button Name="CreateNewTestBT" BorderBrush="{x:Null}" HorizontalAlignment="Left" VerticalAlignment="Center" Width="26"
                Command="{Binding CreateNewTestBTCommand}" Template="{DynamicResource AddButtonTemplate}"
                Height="28" VerticalContentAlignment="Center" Margin="1,0,1,0" Background="#FF6CFFB6"/>

            <Button Name="SaveTestBT" BorderBrush="{x:Null}" HorizontalAlignment="Left" VerticalAlignment="Center" Width="26"
                Command="{Binding SaveTestBTCommand}" Template="{DynamicResource SaveButtonTemplate}"
                Height="28" VerticalContentAlignment="Center" Margin="1,0,1,0" Background="#FF6CFFB6"/>

            <Button Name="DeleteTestBT" BorderBrush="{x:Null}" HorizontalAlignment="Left" VerticalAlignment="Center" Width="26"
                Command="{Binding DeleteTestBTCommand}" Template="{DynamicResource DeleteButtonTemplate}"
                Height="28" VerticalContentAlignment="Center" Margin="1,0,1,0" Background="#FFFF8F6C"/>

            <Button Name="EditLections" BorderBrush="{x:Null}" HorizontalAlignment="Left" VerticalAlignment="Center" Width="26"
                Command="{Binding GoToLectionsEditorCommand}" Template="{DynamicResource EditLectionsButtonTemplate}"
                Height="28" VerticalContentAlignment="Center" Margin="1,0,1,0" Background="White"/>

        </StackPanel>
        <Frame x:Name="EditFrame" Grid.Column="1" Grid.RowSpan="2" BorderBrush="#FFDDDDDD" BorderThickness="1"/>
        <ListBox x:Name="ListBox" Background="Azure"  Grid.Row="2" ItemsSource="{Binding TestList}"  BorderThickness="0"
         HorizontalContentAlignment="Stretch" SelectedItem="{Binding Test}" Margin="0,0,0,25">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Path=Name}" TextWrapping="Wrap" MaxWidth="140"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Button Content="Назад" FontFamily="Microsoft YaHei UI" FontSize="14" Background="#FFFF8F6C" 
            BorderBrush="{x:Null}" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="140" 
            Height="25" Click="Back_Click" Margin="0,394,0,0" Grid.Row="2"/>
    </Grid>
</Page>
