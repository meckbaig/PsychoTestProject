<Page x:Name="testPage" x:Class="PsychoTestProject.View.Tests"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PsychoTestProject.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Tests">

    <Grid Background="Azure">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="140"/>
            <ColumnDefinition Width="6*"/>
        </Grid.ColumnDefinitions>
        <ListBox x:Name="ListBox" Background="Azure" ItemsSource="{Binding TestList}" 
            HorizontalContentAlignment="Stretch" SelectedItem="{Binding Test}" Margin="0,0,0,25">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Path=Name}" TextWrapping="Wrap" MaxWidth="140"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Frame x:Name="TestFrame" Grid.Column="1"/>
        <TextBlock x:Name="TitleTextBlock" Visibility="{Binding ElementName=testPage, Path=DataContext.TextVisibility}" Grid.Column="1" TextWrapping="Wrap"
            Text="{Binding Path=TestTitle}" HorizontalAlignment="Center" Margin="30,0,30,80"
            FontFamily="Microsoft YaHei UI" FontSize="20" VerticalAlignment="Center" TextAlignment="Center" MaxWidth="700"/>
        <Button x:Name="StartTestButton" Visibility="{Binding ElementName=testPage, Path=DataContext.Visibility}" Content="Начать тест" 
            CommandParameter="{Binding ElementName=testPage, Path=DataContext.Test}" Command="{Binding ElementName=testPage, 
            Path=DataContext.OpenTestCommand}" Height="30" Width="112" FontFamily="Microsoft YaHei UI" FontSize="15" Background="#FF6CFFB6"
            BorderBrush="{x:Null}" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <Button Content="Назад" FontFamily="Microsoft YaHei UI" FontSize="14" Background="#FFFF8F6C" BorderBrush="{x:Null}" HorizontalAlignment="Center" 
            VerticalAlignment="Bottom" Width="140" Height="25" Click="Back_Click"/>
    </Grid>
</Page>