<Window x:Name="mainWindow"
        x:Class="PsychoTestProject.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PsychoTestProject.View"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors" 
        mc:Ignorable="d" Closing="Window_Closing" WindowState="Maximized"
        Title="PsychoTest" Height="100" Width="100" MouseWheel="Window_MouseWheel"
        MinWidth="{Binding MinWidthScale}" MinHeight="{Binding MinHeightScale}">
    <Grid>
        <Grid.LayoutTransform>
            <ScaleTransform ScaleX="{Binding Scale}" ScaleY="{Binding Scale}"/>
        </Grid.LayoutTransform>
        <Frame x:Name="MainFrame" VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch" NavigationUIVisibility="Hidden"/>
        <TextBlock x:Name="ScaleTB" HorizontalAlignment="Center" Text="{Binding ScalePercent, StringFormat={}{0}%}" 
         VerticalAlignment="Top" FontSize="60" Margin="0,30,0,0" Foreground="#00000000" Visibility="Collapsed"/>
    </Grid>
</Window>
