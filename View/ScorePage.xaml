<Page x:Name="scorePage" x:Class="PsychoTestCourseProject.View.ScorePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PsychoTestCourseProject.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ScorePage">

    <Grid Background="White">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" DataContext="{Binding ElementName=scorePage, Path=DataContext}">
            <TextBlock Text="{Binding StringFormat = Результат: {0}, Path=Score}" HorizontalAlignment="Center" Foreground="#FF007FFE" FontFamily="Microsoft YaHei UI" FontSize="20"></TextBlock>
            <TextBlock Text="{Binding StringFormat = Оценка: {0}, Path=Result}" HorizontalAlignment="Center" Foreground="#FF007FFE" FontFamily="Microsoft YaHei UI" FontSize="24"></TextBlock>
        </StackPanel>
    </Grid>
</Page>
