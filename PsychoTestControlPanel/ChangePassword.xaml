<Page x:Class="PsychoTestControlPanel.ChangePassword"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PsychoTestControlPanel"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ChangePassword">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock HorizontalAlignment="Center" TextAlignment="Center"
             Margin="5" FontSize="23" Text="Введите новый пароль"/>
            <TextBox x:Name="PasswordTB" Margin="5" TextWrapping="Wrap"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Height="40" Width="130" Content="Назад" Margin="5" 
                 Background="#FFFF8F6C" Click="BackButton_Click" FontSize="16"/>
                <Button Height="40" Width="130" Content="Применить" Margin="5" 
                 Background="#FF6CFFB6" Click="ApplyButton_Click" FontSize="16"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
